{% extends 'base.html.twig' %}

{% block title %}Subject index{% endblock %}

{% block body %}

    {{ dump(subjects) }}

    <h1>Subject index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title_subject</th>
                <th>CreatedAt_subject</th>
                <th>Sujet crée par</th>
                <th>Catégorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subject in subjects %}
            <tr>
                <td>{{ subject.titleSubject }}</td>
                <td>{{ subject.createdAtSubject ? subject.createdAtSubject|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ subject.visitor.pseudoVisitor }}</td>
                <td>{{ subject.category.title }}</td>
                <td>
                    <a href="{{ path('subject_show', {'id': subject.id}) }}">show</a>
                    <a href="{{ path('subject_edit', {'id': subject.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('subject_new') }}">Create new</a>
{% endblock %}
