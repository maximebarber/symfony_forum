{% extends 'base.html.twig' %}

{% block body %}

    <br><h1>Connexion</h1>

    <form action="{{ path('security_login') }}" method="post">
    
        <div class="form-group">
        
            {# _username compulsory #}
            <input type="text" placeholder="Votre pseudo" class="form-control" required name="_username">

        </div>
        <div class="form-group">

            {# _password compulsory #}
            <input type="password" placeholder="Votre mot de passe" class="form-control" required name="_passsword">

        </div>

        <div class="form-group">

            <button type="submit" class="btn btn-outline-secondary">Connexion</button>
            
        </div>

    </form>

{% endblock %}